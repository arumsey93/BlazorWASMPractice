@page "/counter"

<MudText Typo="Typo.h1">Counter</MudText>

<MudText Typo="Typo.body2">Current count: @_currentCount</MudText>

<MudButton Variant="Variant.Filled" OnClick="IncrementCount" Color="Color.Primary"><MudText Typo="Typo.button">Click me</MudText></MudButton>

@code {
    private int _currentCount = 0;

    private void IncrementCount()
    {
        _currentCount++;
    }
}
